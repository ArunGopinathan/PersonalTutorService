<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgrounddesign5"
    tools:context="edu.uta.cse.personaltutorservice.Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/labelQuickSummary"
                android:layout_alignParentStart="true"
                android:text="Welcome !"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/logOutButton"
                android:layout_below="@+id/logOutButton"
                android:gravity="right"
                android:layout_marginEnd="55dp"
                android:text="Undefined"
                android:textSize="18dp" />

        </LinearLayout>


        <Button
            android:id="@+id/logOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Log out"
            android:layout_gravity="right" />

        <com.quinny898.library.persistentsearch.SearchBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchbox"
            android:visibility="visible"
            
            />

        <Button
            android:id="@+id/btnNearbyPlaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quicksummary"
            android:text="Show Nearby Tutors"

            />


    </LinearLayout>


</FrameLayout>
