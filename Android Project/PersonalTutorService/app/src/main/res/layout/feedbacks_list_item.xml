<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_course_cv_all_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_margin="3dp"
    android:elevation="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fb_list_item_fl_circle"
            android:layout_width="@dimen/circle_radius"
            android:layout_height="@dimen/circle_radius"

            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/fb_list_item_iv_circle"
                android:layout_width="@dimen/circle_radius"
                android:layout_height="@dimen/circle_radius"

                android:background="@drawable/circle"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/fb_list_item_user_initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:text=""
                android:textColor="@color/ColorWhite"
                android:textStyle="bold" />


        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fb_list_item_fl_circle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fb_list_item_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:ellipsize="end"
                            android:text="Chris"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/fb_list_item_ratingbar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="60" />

                            <TextView
                                android:id="@+id/fb_list_item_submit_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/fb_list_item_category_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Android"
                                />


                            <TextView
                                android:id="@+id/seperator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  |  " />

                            <TextView
                                android:id="@+id/fb_list_item_subcategory_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile"/>

                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/fb_list_item_login_user_panel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/fb_list_item_like_feedback"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:clickable="true"
                                android:src="@drawable/ic_action_like" />
                            <TextView
                                android:id="@+id/fb_list_item_num_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/green"
                                android:layout_margin="5dp"
                                android:text="0"/>
                            <ImageView
                                android:id="@+id/fb_list_item_dislike_feedback"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:clickable="true"
                                android:src="@drawable/ic_action_dislike" />
                            <TextView
                                android:id="@+id/fb_list_item_num_dislike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"
                                android:layout_margin="5dp"
                                android:text="0"/>
                        </LinearLayout>




                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fb_list_item_fb_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/ColorBlack"
                        android:textSize="16dp"
                        android:text="This professor is good"></TextView>

                    <TextView
                        android:id="@+id/fb_list_item_fb_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="none"
                        android:textSize="12dp"></TextView>

                    >
                    <TextView
                        android:id="@+id/fb_list_item_fb_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="2016-4-11 20:00:00"
                        android:layout_margin="10dp"
                        android:textSize="12dp"></TextView>

                    >

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>
